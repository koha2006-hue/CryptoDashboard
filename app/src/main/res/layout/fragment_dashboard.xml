<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DashboardFragment">

    <!-- Vertical LinearLayout for Cryptocurrencies -->
    <LinearLayout
        android:id="@+id/cryptoList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"> <!-- Set bottom constraint to the bottom of the parent -->
        <!-- Crypto 1 -->
        <LinearLayout
            android:id="@+id/crypto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cryptoSymbol1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTC"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/cryptoName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bitcoin"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/cryptoPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: $45,000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/cryptoChange1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change: +$200 (2%)"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Add more cryptocurrency information as needed -->

        </LinearLayout>

        <!-- Crypto 2 -->
        <LinearLayout
            android:id="@+id/crypto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cryptoSymbol2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETH"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/cryptoName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ethereum"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/cryptoPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: $3,000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/cryptoChange2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change: -$50 (-1%)"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Add more cryptocurrency information as needed -->

        </LinearLayout>

        <!-- Crypto 3 -->
        <LinearLayout
            android:id="@+id/crypto3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cryptoSymbol3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADA"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/cryptoName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cardano"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/cryptoPrice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: $2.50"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/cryptoChange3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change: +$0.20 (2.5%)"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Add more cryptocurrency information as needed -->

        </LinearLayout>

        <!-- Crypto 4 -->
        <LinearLayout
            android:id="@+id/crypto4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cryptoSymbol4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XRP"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/cryptoName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ripple (XRP)"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/cryptoPrice4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: $1.20"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/cryptoChange4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change: -$0.05 (-4%)"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Add more cryptocurrency information as needed -->

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
